{
  "manifest_version": 2,

  "name": "TPM+",
  "author": "Steven Mirabito",

  "icons": {
    "16": "icons/icon_16.png",
    "19": "icons/icon_19.png",
    "24": "icons/icon_24.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://plasticmerchant.knack.com/bulksellers*"],
      "js": [
        "pobuilder-ext.js"
      ]
    }
  ],

  "permissions": [
    "https://plasticmerchant.knack.com/",
    "https://us-api.knack.com/"
  ]
}
